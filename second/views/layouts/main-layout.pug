include ../Mixines/mixines

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
        link(rel='stylesheet', href='/css/main-layout.css')
        


    body
        .wrapper 
            .row 
                nav.col-2.col-md-2
                    a.dave_link(href="/")
                        i.fas.fa-dove
                    a.home_link(href="/")
                        i.fas.fa-home
                    a.search_link(href="/Search")
                        i.fas.fa-search
                    a.notification_link(href="/Messages")
                        i.fas.fa-bell
                    a.profile_link(href="/Profile")
                        i.fas.fa-envelope-open-text
                    a.message_link(href="/Messages")
                        i.fas.fa-user
                    a.signout_link(href="/logout")
                        i.fas.fa-sign-out-alt
                .mainSectionContainer.col-10.col-md-8
                    .title
                        h2 #{pageTitle}
                    block content

                div.col-2.d-none.d-md-block
                    span bottom

        script(src='https://kit.fontawesome.com/05bfd8388a.js' crossorigin='anonymous')

        script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
